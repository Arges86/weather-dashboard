{
  "name": "weather-dashboard",
  "productName": "Weather Dashboard",
  "description": "Weather and Info Dashboard",
  "version": "0.2.0",
  "private": false,
  "author": "Stephen Thompson <stthompson@outlook.com>",
  "email": "stthompson@outlook.com",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "productName": "Weather Dashboard",
    "appId": "arges86.weather-dashboard",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null,
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l"
          ]
        }
      ],
      "icon": "build/icons"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "eslint": "eslint --init",
    "start": "node build/start.js",
    "prerelease": "rm -rf dist",
    "release": "webpack --config=build/webpack.app.config.js --env production && electron-builder"
  },
  "dependencies": {
    "electron-settings": "^4.0.2",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "babel-loader": "^8.2.3",
    "chai": "^4.3.4",
    "css-loader": "^6.5.1",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-mocha": "^9.3.3",
    "eslint": "^7.30.0",
    "eslint-config-google": "^0.14.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^8.4.0",
    "source-map-support": "^0.5.20",
    "spectron": "^12.0.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^2.5.2"
  }
}
